        </activity>


        <activity android:name=".SelectMode" android:screenOrientation="landscape"></activity>
        <activity android:name=".Piano" android:screenOrientation="landscape"></activity>
        <activity android:name="studymode.StudyPiano" android:screenOrientation="landscape"></activity>
